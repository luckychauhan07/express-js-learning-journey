<%- include('../partials/edit-register')%>

        <!-- Main Content -->
        <main class="flex-grow flex items-center justify-center px-4 py-10">
            <form
                action="/host/<%= editing?'editHome':'registerHome'%>"
                method="POST"
                class="bg-white p-8 rounded-xl shadow-md w-full max-w-lg space-y-6"
            >
                <h2 class="text-2xl font-semibold text-gray-700 text-center">
                       <%= editing? 'You are editing a home listing':'Register your home here' %></h2>
                    
                <div>
                    
                    <label
                        for="username"
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >House Name</label
                    >
                    <input
                    value="<%=editing? editHome.housename :''%>"
                        id="username"
                        type="text"
                        name="houseName"
                        placeholder="Enter your house name"
                        class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                </div>
                
                <div>
                    <label
                        for="price"
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Charge per Night</label
                    >
                    <input
                    value="<%=editing? editHome.price:'' %>"
                        type="number"
                        name="chargePerNight"
                        id="price"
                        placeholder="00"
                        class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                </div>

                <div>
                    <label
                        for="location"
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Location</label
                    >
                    <input
                    value="<%=editing? editHome.location : ''%>"
                        type="text"
                        id="location"
                        name="location"
                        placeholder="Hasanpur"
                        class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                </div>

                <div>
                    <label
                        for="rating"
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Rating</label
                    >
                    <input
                    value="<%=editing? editHome.rating:'' %>"
                        type="text"
                        id="rating"
                        name="rating"
                        placeholder="4.4"
                        class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                </div>

                <div>
                    <label
                        for="image"
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Image URL</label
                    >
                    <input
                    value="<%=editing? editHome.photourl:'' %>"
                        type="text"
                        id="image"
                        name="imageUrl"
                        placeholder="penthouse.jpg"
                        class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                </div>
                <div>
                    <label
                        for="description"
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Image Description</label
                    >
                    <input
                    value="<%=editing? editHome.description:'' %>"
                        type="text"
                        id="description"
                        name="description"
                        placeholder="penthouse"
                        class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                </div>
                <input type="hidden" name="homeId" value="<%= editing?editHome.idhomes:''%>">
                <button
                    type="submit"
                    class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition"
                >
                    <%= editing?"Update Home" :'Register Home' %>
                </button>
            </form>
        </main>

        <!-- Footer -->
        <footer class="bg-white shadow-inner">
            <div
                class="max-w-7xl mx-auto px-4 py-6 text-center text-sm text-gray-500"
            >
                &copy; 2025 Airbnb Clone. All rights reserved.
            </div>
        </footer>
    </body>
</html>
