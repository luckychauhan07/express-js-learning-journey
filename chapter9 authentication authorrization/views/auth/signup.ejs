<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Sign Up</title>
		<link rel="stylesheet" href="/output.css" />
	</head>
	<body
		class="bg-gradient-to-br from-blue-50 to-blue-100 min-h-screen flex flex-col font-sans"
	>
		<%- include('../partials/header') %>

		<main
			class="flex-grow w-full flex justify-center items-start bg-gray-50 px-4 sm:px-6 lg:px-8 py-8 sm:py-12"
		>
			<div
				class="w-full max-w-md bg-white/90 border border-gray-200 rounded-2xl shadow-xl backdrop-blur-lg p-8 transition-all duration-300 ease-in-out"
			>
				<!-- Form Header -->
				<div class="text-center mb-8">
					<h2 class="text-3xl font-bold text-red-600">
						Create Your Account
					</h2>
					<%- include('../partials/errors') %>
				</div>

				<form action="/signup" method="POST" class="space-y-5">
					<!-- First & Last Name -->
					<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
						<div>
							<label
								for="firstName"
								class="block text-sm font-medium text-gray-700 mb-1"
							>
								First Name <span class="text-red-500">*</span>
							</label>
							<input
								value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
								type="text"
								id="firstName"
								name="firstName"
								required
								placeholder="John"
								class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-red-400 focus:ring-1 focus:ring-red-400"
							/>
						</div>
						<div>
							<label
								for="lastName"
								class="block text-sm font-medium text-gray-700 mb-1"
							>
								Last Name
							</label>
							<input
								value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
								type="text"
								id="lastName"
								name="lastName"
								placeholder="Doe"
								class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-red-400 focus:ring-1 focus:ring-red-400"
							/>
						</div>
					</div>

					<!-- Email -->
					<div>
						<label
							for="email"
							class="block text-sm font-medium text-gray-700 mb-1"
						>
							Email <span class="text-red-500">*</span>
						</label>
						<input
							value="<%= oldInput.email ? oldInput.email : '' %>"
							type="email"
							id="email"
							name="email"
							required
							placeholder="you@example.com"
							class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-red-400 focus:ring-1 focus:ring-red-400"
						/>
					</div>

					<!-- Password -->
					<div>
						<label
							for="password"
							class="block text-sm font-medium text-gray-700 mb-1"
						>
							Password <span class="text-red-500">*</span>
						</label>
						<input
							value=""
							type="password"
							id="password"
							name="password"
							required
							placeholder="••••••••"
							class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-red-400 focus:ring-1 focus:ring-red-400"
						/>
					</div>

					<!-- Confirm Password -->
					<div>
						<label
							for="conformPassword"
							class="block text-sm font-medium text-gray-700 mb-1"
						>
							Confirm Password <span class="text-red-500">*</span>
						</label>
						<input
							value=""
							type="password"
							id="conformPassword"
							name="confirmPassword"
							required
							placeholder="••••••••"
							class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:border-red-400 focus:ring-1 focus:ring-red-400"
						/>
					</div>

					<!-- User Type -->
					<div>
						<p class="text-sm font-medium text-gray-700 mb-2">
							Register as
						</p>
						<div class="flex gap-6">
							<label class="inline-flex items-center">
								<input type="radio" name="userType"
								value="guest" class="accent-red-500" <%=
								oldInput.userType === 'guest' ? 'checked' : ''
								%> />
								<span class="ml-2 text-gray-600">Guest</span>
							</label>
							<label class="inline-flex items-center">
								<input type="radio" name="userType" value="host"
								class="accent-red-500" <%= oldInput.userType ===
								'host' ? 'checked' : '' %> />
								<span class="ml-2 text-gray-600">Host</span>
							</label>
						</div>
					</div>

					<!-- Terms Checkbox -->
					<div class="flex items-start gap-3 mb-2 pt-2">
						<input
							type="checkbox"
							name="terms"
							value="on"
							id="terms"
							required
							class="accent-red-500 mt-1 h-4 w-4"
						/>
						<label for="terms" class="text-sm text-gray-600">
							I agree to the
							<a
								href="#"
								class="font-medium text-red-600 hover:underline"
								>Terms and Conditions</a
							>
						</label>
					</div>

					<!-- Submit Button -->
					<div class="pt-4 mb-3">
						<button
							type="submit"
							class="w-full bg-red-500 hover:bg-red-600 active:bg-red-700 text-white font-bold py-3 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
						>
							Register
						</button>
					</div>
				</form>

				<!-- Link to Login -->
				<div class="text-center mb-3">
					<p class="text-sm text-gray-600">
						Already have an account?
						<a
							href="/login"
							class="font-medium text-red-600 hover:underline"
							>Log in</a
						>
					</p>
				</div>
			</div>
		</main>

		<%- include('../partials/footer') %>
	</body>
</html>
