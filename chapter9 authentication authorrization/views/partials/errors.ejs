<% if (errors.length > 0) { %>
<div class="flex flex-col items-center mt-6">
	<div
		class="w-full max-w-lg bg-white/90 border border-red-200 shadow-xl rounded-2xl px-6 py-5 flex items-start gap-4 animate-fade-in ring-1 ring-red-100"
	>
		<div
			class="flex items-center justify-center h-12 w-12 rounded-full bg-gradient-to-br from-red-400 to-red-600 shadow-lg"
		>
			<svg
				class="w-7 h-7 text-white"
				fill="none"
				stroke="currentColor"
				stroke-width="2.5"
				viewBox="0 0 24 24"
			>
				<circle
					cx="12"
					cy="12"
					r="10"
					stroke="currentColor"
					stroke-width="2.5"
					fill="none"
				/>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M12 8v4m0 4h.01"
				/>
			</svg>
		</div>
		<div>
			<div class="flex items-center gap-2 mb-1">
				<span
					class="inline-block bg-red-500 text-white rounded px-2 py-0.5 text-xs font-semibold tracking-wide shadow"
					>Error</span
				>
				<span class="font-semibold text-base text-red-700"
					>Please fix the following issues:</span
				>
			</div>
			<ul
				class="list-disc list-inside space-y-1 text-gray-700 text-[1rem] pl-1"
			>
				<% errors.forEach(err => { %>
				<li><%= err %></li>
				<% }); %>
			</ul>
		</div>
	</div>
</div>
<style>
	@keyframes fade-in {
		from {
			opacity: 0;
			transform: translateY(-10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	.animate-fade-in {
		animation: fade-in 0.5s cubic-bezier(0.4, 0, 0.2, 1);
	}
</style>
<% } %>
